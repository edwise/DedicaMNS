<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/dayNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:text="09"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/dayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dayNum"
        android:padding="5sp"
        android:text="Martes"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dayName"
        android:padding="5sp"
        android:text="8:30"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/projectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/hours"
        android:padding="5sp"
        android:text="BBVA68"
        android:textSize="20dp" >
    </TextView>

</RelativeLayout>